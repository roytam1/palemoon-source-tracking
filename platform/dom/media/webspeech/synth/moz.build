    DIRS += ['windows']

if CONFIG['MOZ_SYNTH_SPEECHD']:
    DIRS += ['speechd']

if CONFIG['MOZ_SYNTH_PICO']:
    DIRS += ['pico']

IPDL_SOURCES += [
    'ipc/PSpeechSynthesis.ipdl',
    'ipc/PSpeechSynthesisRequest.ipdl',
]

include('/ipc/chromium/chromium-config.mozbuild')

FINAL_LIBRARY = 'xul'
