if CONFIG['MOZ_EM_DEBUG']:
    DEFINES['MOZ_EM_DEBUG'] = 1

JAR_MANIFESTS += ['jar.mn']

EXPORTS.mozilla += [
    'AddonPathService.h',
]

UNIFIED_SOURCES += [
    'AddonPathService.cpp'
]

FINAL_LIBRARY = 'xul'
