    'flac.c',
    'flac_parser.c',
    'flacdata.c',
    'flacdec.c',
    'flacdsp.c',
    'golomb.c',
    'h264pred.c',
    'imgconvert.c',
    'log2_tab.c',
    'mathtables.c',
    'null_bsf.c',
    'options.c',
    'parser.c',
    'profiles.c',
    'pthread.c',
    'pthread_frame.c',
    'pthread_slice.c',
    'qsv_api.c',
    'raw.c',
    'reverse.c',
    'utils.c',
    'videodsp.c',
    'vorbis_parser.c',
